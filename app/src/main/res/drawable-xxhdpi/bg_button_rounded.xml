<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape  android:shape="rectangle">
            <solid
                android:color="@color/red" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    />
            <corners
                android:radius="6dp"   />
        </shape>
    </item>
    <item>
        <shape  android:shape="rectangle">
            <solid
                android:color="@color/color_2" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    />
            <corners
                android:radius="6dp"   />
            <gradient
                android:startColor="@color/color_4"
                android:endColor="@color/color_5"
                android:angle="90" />
        </shape>
    </item>
</selector>
